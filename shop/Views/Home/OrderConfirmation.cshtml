@{
    ViewData["Title"] = "Order Confirmation";
}

@model (int Id, double Price, bool Success)


<h1>@ViewData["Title"]</h1>

<p>@ViewData["Message"]</p>

@if (!Model.Success)
{
    <a asp-action="Payment" asp-controller="Home" asp-route-orderId="@Model.Id" asp-route-totalPrice="@Model.Price" class="text-secondary text-decoration-none">Try again</a>
}
else
{
    <a asp-action="Index" asp-controller="Home" class="text-secondary text-decoration-none">Go back to main page</a>
}
