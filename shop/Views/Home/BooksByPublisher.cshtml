@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books by publisher";
}

<div class="text-center">
    <h1 class="display-6">@ViewData["Title"]: @ViewData["publisherName"]</h1>
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%;">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td class="text-left" style="width: 20%;">@obj.Title</td>
                    <td class="text-justify">@obj.Description</td>
                    <td>@obj.Genre.GenreName</td>
                    <td class="text-nowrap">@obj.Price z≈Ç</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>